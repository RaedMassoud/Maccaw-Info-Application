<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MangoSensation">

<!--    Page Title      -->
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:text="Mango Sensation"
        android:textColor="#FFFF00"
        android:textSize="25sp" />

<!--    Product Image    -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/mangosensation" />

<!--    Product Description     -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:text="
        Price: LBP 26,013 / unit\n
        ---------------------------------------\n\n
        Volume: 1 L\n\n
        Packaging: Aseptic Carton - Slim\n\n
        Qty Per Case: 8 x 1 L\n\n
        Case Type: Carton Tray + Shrink\n\n
        Shelf Life: 1 year\n" />

<!--    Sub layout for spinner and button   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >


<!--    Purchase quantity spinner   -->
    <Spinner
        android:id="@+id/spinnerPurchaseQuantity"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_gravity="center"
        android:background="@color/purple"
        android:popupBackground="@color/purple"
        android:entries="@array/purchase_quantity"
        android:spinnerMode="dropdown" />

<!--    Purchase Button     -->
    <Button
        android:id="@+id/buttonOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:text="Order"    />

    </LinearLayout>


    <!--    Back Button     -->
    <!--    <Button-->
    <!--        android:id="@+id/buttonBack"-->
    <!--        android:layout_width="200dp"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_gravity="center"-->
    <!--        android:layout_marginTop="50dp"-->
    <!--        android:text="Back" />-->

</LinearLayout>